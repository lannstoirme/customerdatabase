                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProceduresPerformed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcedureDescription)
            </td>
