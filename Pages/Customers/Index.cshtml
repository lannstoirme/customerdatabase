                @Html.DisplayNameFor(model => model.Customer[0].ConsentGiven)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].UnderEighteen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].MarketingSubscribed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].PregnantBreastfeeding)
