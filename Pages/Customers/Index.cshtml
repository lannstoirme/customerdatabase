                @Html.DisplayFor(modelItem => item.UnderEighteen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarketingSubscribed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PregnantBreastfeeding)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotesOnCustomer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferralInformation)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
